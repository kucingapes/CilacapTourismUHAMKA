<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sejarah.uhamka.cilacaptourism">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.Noaction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="Peta" />
        <activity android:name=".DetailActivity" />
        <activity
            android:name=".FullPhoto"
            android:theme="@style/AppTheme.Noaction.Fullscreen" />
        <activity android:name=".FavoriteList"
            android:label="Lokasi Favorit"/>
        <activity android:name=".SearchActivity"/>
    </application>

</manifest>